{
  "backend_url": "http://127.0.0.1:8000",
  "base_url": "http://localhost:3000",
  "created_by": "manual-file-runner",
  "jobs": [
    {
      "feature_name": "Wishlist",
      "feature_description": "User can add/remove wishlist item and see validation.",
      "seed_urls": [
        "/"
      ],
      "coverage_mode": "SMOKE_NEGATIVE",
      "max_scenarios": 8,
      "max_routes": 20,
      "intent_hints": [
        "wishlist"
      ],
      "scenarios": [
        {
          "title": "Add product to wishlist",
          "steps": [
            "Click 'Wishlist' button on a product"
          ],
          "assertions": [
            "Wishlist count in Navbar increases",
            "Item is visible on wishlist page"
          ]
        },
        {
          "title": "Remove product from wishlist",
          "steps": [
            "Click on 'Wishlist' icon in Navbar",
            "Click 'Remove' button on a wishlisted item"
          ],
          "assertions": [
            "Wishlist count decreases",
            "Removed item is not shown on wishlist page"
          ]
        }
      ]
    },
    {
      "feature_name": "Coupon",
      "feature_description": "User can apply discount coupons in the cart summary section ('Have a coupon?') and see updated totals. The 'Apply' button enables after typing a code. Coupons persist across refreshes.",
      "seed_urls": [
        "/",
        "product/1",
        "/cart"
      ],
      "coverage_mode": "SMOKE_NEGATIVE",
      "max_scenarios": 5,
      "max_routes": 5,
      "intent_hints": [
        "product view detail page",
        "add a product to cart",
        "Have a coupon?",
        "Enter code",
        "Apply coupon",
        "discount"
      ],
      "scenarios": [
        {
          "title": "Apply valid PERCENT coupon",
          "steps": [
            "click first 'View Details' button on home page",
            "add a product to cart",
            "go to cart",
            "type 'SAVE10' into 'Enter code' input",
            "click 'Apply' button in coupon section"
          ],
          "assertions": [
            "coupon success message is visible",
            "discount amount is visible",
            "total amount changed after coupon apply"
          ]
        },
        {
          "title": "Coupon persistence after refresh",
          "steps": [
            "click first 'View Details' button on home page",
            "add a product to cart",
            "Apply coupon 'SAVE10' in cart",
            "Refresh the browser page"
          ],
          "assertions": [
            "coupon remains applied after refresh",
            "total still shows the discount"
          ]
        },
        {
          "title": "Apply invalid coupon",
          "steps": [
            "click first 'View Details' button on home page",
            "add a product to cart",
            "go to cart",
            "type 'INVALID_CODE' into 'Enter code' input",
            "click 'Apply' button in coupon section"
          ],
          "assertions": [
            "error message 'Invalid coupon code' is displayed",
            "total remains unchanged"
          ]
        }
      ]
    },
    {
      "feature_name": "Contact Us",
      "feature_description": "User can open Contact Us page from navbar menu and submit the contact form with name, email, subject and message. Success confirmation should appear after submit.",
      "seed_urls": [
        "/",
        "/contact"
      ],
      "coverage_mode": "SMOKE_NEGATIVE",
      "max_scenarios": 4,
      "max_routes": 10,
      "intent_hints": [
        "contact us menu",
        "contact form",
        "name",
        "email",
        "subject",
        "message",
        "send message"
      ],
      "scenarios": [
        {
          "title": "Submit contact form with valid details",
          "steps": [
            "click 'Contact Us' from navbar menu",
            "type 'Arvind Kumar' into Name input",
            "type 'arvind@example.com' into Email input",
            "type 'Order support' into Subject input",
            "type 'Need help with my recent order status.' into Message textarea",
            "click 'Send Message' button"
          ],
          "assertions": [
            "success message is visible after submit",
            "contact form remains visible"
          ]
        },
        {
          "title": "Required validation on empty contact form",
          "type": "NEGATIVE",
          "steps": [
            "click 'Contact Us' from navbar menu",
            "click 'Send Message' button without entering any field"
          ],
          "assertions": [
            "required field validation is triggered",
            "contact form is still visible"
          ]
        }
      ]
    }
  ]
}